@model List<Falabella.Models.ViewModels.Producto.ListProductoViewModels>
@{
    ViewBag.Title = "Datos de Productos";
}

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:right;padding:5px;">
    <a href="/Producto/Nuevo" class="btn btn-primary">Nuevo</a>

</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>Id Producto</th>
                <th>Nombre</th>
                <th>Estado</th>                
                <th></th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.idProducto</td>
                    <td>@oElemento.nombre</td>
                    <td>@oElemento.estado</td>                  
                    <td>
                        @*<a class="btn btn-default" href="~/Compania/Editar/@oElemento.idCompania">Editar</a>*@
                        <a class="btn btn-default" href="@Url.Action("Editar", "Producto", new { idProducto = @oElemento.idProducto })">Editar</a>
                        <a class="btn btn-danger" href="@Url.Action("Eliminar", "Producto", new { idProducto = @oElemento.idProducto })" onclick="return confirm('Esta seguro de eliminar el producto?');">Eliminar</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

