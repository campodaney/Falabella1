@model List<Falabella.Models.ViewModels.Compania.ListCompaniaViewModels>
@{
    ViewBag.Title = "Datos de Compañia";
}

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:right;padding:5px;">
    <a href="/Compania/Nuevo" class="btn btn-primary">Nuevo</a>

</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>Id Compañia</th>
                <th>Nombre</th>
                <th>Persona Contacto</th>
                <th>Telefono Contacto</th>
                <th>Nit</th>
                <th></th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.idCompania</td>
                    <td>@oElemento.nombre</td>
                    <td>@oElemento.personaContacto</td>
                    <td>@oElemento.telefonoContacto</td>
                    <td>@oElemento.nit</td>
                    <td>
                        @*<a class="btn btn-default" href="~/Compania/Editar/@oElemento.idCompania">Editar</a>*@
                        <a class="btn btn-default" href="@Url.Action("Editar", "Compania", new { idCompania = @oElemento.idCompania })">Editar</a>
                        <a class="btn btn-danger" href="@Url.Action("Eliminar", "Compania", new { idCompania = @oElemento.idCompania })" onclick="return confirm('Esta seguro de eliminar la compañia?');">Eliminar</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
