@model List<Falabella.Models.ViewModels.CompaniaProducto.ListCompaniaProductoViewModels>
@{
    ViewBag.Title = "Compañias con sus Productos";
}

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:right;padding:5px;">
    <a href="/CompaniaProducto/Nuevo" class="btn btn-primary">Nuevo</a>

</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>#</th>
                <th>Compañia</th>
                <th>Producto</th>
                <th>Estado</th>
                <th></th>
            </tr>
            @foreach (var oElemento in Model)
            {
        <tr>
            <td>@oElemento.idCompaniaProducto</td>
            <td>@oElemento.compania</td>
            <td>@oElemento.producto</td>
            <td>@oElemento.estado</td>
            <td>
                @*<a class="btn btn-default" href="~/Compania/Editar/@oElemento.idCompania">Editar</a>*@
                <a class="btn btn-default" href="@Url.Action("Editar", "CompaniaProducto", new { idCompaniaProducto = @oElemento.idCompaniaProducto })">Editar</a>
                
            </td>
        </tr>
            }
        </table>
    </div>
</div>


